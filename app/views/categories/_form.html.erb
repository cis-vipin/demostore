<%= form_for @category,:html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
      <% @category.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name,"Category Name", :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

   <%= f.fields_for :image do |i| %>
      <div class="control-group">
        <%= i.label :image, :class => 'control-label' %>
        <div class="controls">
          <%= i.file_field  :image, :class => 'text_field' %>
        </div>
      </div>
   <% end %>
      
  <%= f.label :name ,"Category name" %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
