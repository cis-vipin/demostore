<%= form_for @product, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :price, :class => 'number_field' %>
    </div>
  </div>


  <div id="blockBrowseImage" class="control-group">
    <div class="controls">
      <%#=f.fields_for :images do |attachment_f|%>
        <%#= attachment_f.file_field :image%>
      <%#end%><%#= image_tag @product.product_image.url(:thumb) %>
      <%= file_field_tag "product[images_attributes][][image]" %>
    </div>
  </div>

  <div class=" control-group add_remove ">
    <div class="controls">
      <a class="add_images" herf="javascript:void(0)" > Add more images</a> | 
      <a class="remove_images" herf="javascript:void(0)" > Remove Images</a>
    </div> 
  </div>

  <div class="control-group">
    <%= f.label :stock, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :stock, :class => '' %> 
    </div>
  </div>

  <div class="control-group">

    <div class="controls">
      <%=f.fields_for :images do |attachment_f|%>
        <%= attachment_f.file_field :name%>
      <%end%><%#= image_tag @product.product_image.url(:thumb) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :stock, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :stock, :class => '' %> 
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">

      <%= f.text_area :description, :class => '' %> 
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn' %>
  </div>
<% end %>
